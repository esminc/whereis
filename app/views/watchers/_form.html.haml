= form_for @watcher do |f|
  - if @watcher.errors.any?
    #error_explanation
      %h2= "#{pluralize(@watcher.errors.count, "error")} prohibited this watcher from being saved:"
      %ul
        - @watcher.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
